#
# Checks that the Intel GT auto-attach script removes the second inferior
# at the end of the program.

load_lib sycl.exp

standard_testfile single-task.cpp

if {[skip_sycl_tests]} {
    unsupported "target does not support SYCL"
    return 0
}

if {![require_sycl_device "gpu" "Intel*"]} {
    unsupported "test is aimed at Intel GPUs only"
    return 0
}

if {[prepare_sycl_for_testing $binfile $srcfile]} {
    return -1
}

if {[start_sycl_program] < 0} {
    return -1
}

# We should be able to run to the end.
continue_sycl_program_to_termination "1"

# Now issue the "run" command from inferior 2.  Switching to inferior
# 2 is needed in case the current inferior is inf 1.  Otherwise the
# switch is redundant and harmless.
gdb_test "inferior 2"
gdb_test "run" [multi_line \
		    "Starting program:  " \
		    "No executable file specified." \
		    "Use the \"file\" or \"exec-file\" command."]
